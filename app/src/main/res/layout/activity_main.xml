<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="manageyourhouse.myh_manageyourhouse.MainActivity"
    android:background="@color/GreenBack">

    <Button
        android:id="@+id/buttonSonnette"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:background="@color/GreenButton"
        android:text="@string/Sonnette"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColorLink="@android:color/holo_green_dark" />

    <ImageButton
        android:id="@+id/buttonEclairage"
        android:layout_width="126dp"
        android:layout_height="98dp"
        android:layout_marginTop="190dp"
        android:background="@color/GreenButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/idea"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        tools:layout_editor_absoluteY="188dp"
        tools:layout_editor_absoluteX="113dp" />

    <ImageButton
        android:id="@+id/buttonParametres"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:background="@color/GreenButton"
        app:srcCompat="@mipmap/settings"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        tools:layout_editor_absoluteY="434dp"
        tools:layout_editor_absoluteX="151dp" />

</android.support.constraint.ConstraintLayout>
